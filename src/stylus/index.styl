@import mixins

body
    background: #009688

[ng-view]
    padding-top: 50px

.stats
    height: 40px
    width: 100%

    padding: 5px 20px
    
    position: absolute
    display: block

    top: 0
    left: 0

.col
    display: inline-block
    height: 100%

.title
    padding: 10px

    &,
    span
        width: 100%

    span
        middle()
        text-transform: uppercase
        font-weight: 800
        color: #fff
        background: #00BCD4
        text-align: center

.sub-categories,
.sub-categories > li,
.sub-categories > li > span
    width: 100%

.sub-categories
    padding: 0

@keyframes clicked
    0%
        transform: rotateY(0)
    50%
        transform: rotateY(180deg)
    100%
        transform: rotateY(0deg)

.sub-categories > li
    padding: 5px

    &.clicked > span
        animation-name: clicked
        animation-duration: 2s

    span
        middle()
        color: #fff
        background: #0097A7
        text-align: center
        cursor: pointer

    &.disabled
        span
            cursor: not-allowed
            background: #006064
            color: rgba(255,255,255,.3)